      }
      .card h3{ margin: 0 0 8px; font-size: 15px; letter-spacing: -0.01em; }
      .card p{ margin: 0; color: rgba(255,255,255,0.74); line-height: 1.65; font-size: 14px; }

      .rowcards{
        display:grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 10px;
      }
      .rowcard{
        padding: 16px 14px;
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,0.10);
        background: rgba(0,0,0,0.16);
      }
      .rname{ font-weight: 900; letter-spacing: -0.01em; }
      .rnote{ margin-top: 6px; font-size: 12px; opacity: 0.70; line-height: 1.5; }

      .security{
        display:grid;
        grid-template-columns: 1.2fr 0.8fr;
        gap: 14px;
        padding: 22px;
        border-radius: 26px;
        border: 1px solid rgba(255,255,255,0.12);
        background:
          radial-gradient(800px 360px at 20% 10%, rgba(124,58,237,0.20), transparent 58%),
          radial-gradient(700px 320px at 90% 35%, rgba(34,211,238,0.14), transparent 58%),
          rgba(255,255,255,0.03);
      }
      .bullets{
        margin: 14px 0 16px;
        padding-left: 18px;
        color: rgba(255,255,255,0.78);
        line-height: 1.75;
        font-size: 14px;
      }
      .sec-right{ display:flex; flex-direction: column; gap: 10px; justify-content:center; }
      .status, .sig{
        padding: 14px;
        border-radius: 22px;
        border: 1px solid rgba(255,255,255,0.10);
        background: rgba(0,0,0,0.18);
      }
      .strow{
        display:flex; justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid rgba(255,255,255,0.07);
        font-size: 13px;
        color: rgba(255,255,255,0.78);
      }
      .strow:last-child{ border-bottom: 0; }
      .ok{ color: rgba(34,211,238,0.95); }
      .sigtitle{ font-size: 12px; opacity: 0.72; }
      .sigbody{ margin-top: 6px; font-weight: 900; letter-spacing: -0.01em; }

      .faq{ display:grid; gap: 10px; }
      .qa{
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,0.10);
        background: rgba(255,255,255,0.03);
        padding: 14px 14px;
      }
      summary{
        cursor: pointer;
        font-weight: 900;
        letter-spacing: -0.01em;
        list-style: none;
      }
      summary::-webkit-details-marker{ display:none; }
      .qa p{
        margin: 10px 0 0;
        color: rgba(255,255,255,0.74);
        line-height: 1.7;
        font-size: 14px;
      }

      .cta{ padding: 56px 0 0; }
      .cta-inner{
        padding: 26px 22px;
        border-radius: 26px;
        border: 1px solid rgba(255,255,255,0.12);
        background:
          radial-gradient(900px 360px at 50% 0%, rgba(124,58,237,0.22), transparent 62%),
          rgba(255,255,255,0.03);
        text-align:center;
      }
      .cta-inner h2{ margin: 0 0 8px; font-size: clamp(22px, 2.4vw, 32px); }
      .cta-inner p{
        margin: 0 auto 16px;
        max-width: 72ch;
        color: rgba(255,255,255,0.75);
        line-height: 1.65;
      }

      .footer{
        margin-top: 56px;
        padding: 22px 0 6px;
        border-top: 1px solid rgba(255,255,255,0.08);
        display:flex; align-items:flex-start; justify-content: space-between; gap: 18px;
      }
      .flinks{ display:flex; gap: 14px; opacity: 0.85; flex-wrap: wrap; }
      .flinks a:hover{ text-decoration: underline; }

      /* MOBILE MENU */
      .mobile{
        position: fixed;
        inset: 0;
        z-index: 60;
        background: rgba(0,0,0,0.55);
        backdrop-filter: blur(6px);
        padding: 16px;
      }
      .mobile-inner{
        max-width: 520px;
        margin: 0 auto;
        border-radius: 24px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(6,7,19,0.92);
        box-shadow: 0 30px 90px rgba(0,0,0,0.55);
        padding: 14px;
      }
      .mobile-top{
        display:flex; align-items:center; justify-content: space-between;
        padding: 6px 4px 10px;
        border-bottom: 1px solid rgba(255,255,255,0.08);
      }
      .mobile-links{
        display:flex; flex-direction: column; gap: 10px;
        padding: 12px 4px 4px;
      }
      .mobile-link{
        padding: 12px 12px;
        border-radius: 16px;
        border: 1px solid rgba(255,255,255,0.10);
        background: rgba(255,255,255,0.04);
        font-weight: 900;
      }
      .mobile-link:hover{ background: rgba(255,255,255,0.07); }

      /* Responsive */
      @media (max-width: 980px){
        .hero{ grid-template-columns: 1fr; }
        .stats{ grid-template-columns: repeat(2, 1fr); }
        .grid{ grid-template-columns: repeat(2, 1fr); }
        .rowcards{ grid-template-columns: repeat(2, 1fr); }
        .security{ grid-template-columns: 1fr; }
        .links{ display:none; }
        .iconbtn{ display:inline-flex; align-items:center; justify-content:center; }
        .navcta .btn{ display:none; }
      }
      @media (max-width: 560px){
        .grid{ grid-template-columns: 1fr; }
        .rowcards{ grid-template-columns: 1fr; }
        .twocol{ grid-template-columns: 1fr; }
      }

      @media (prefers-reduced-motion: reduce){
        .pulse{ animation: none; }
        .card{ transition: none; }
      }
    </style>
  </body>
</html>

