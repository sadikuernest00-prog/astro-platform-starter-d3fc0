---
const base = import.meta.env.BASE_URL;

// helper: always build correct URL (works on / and subfolders)
const img = (path) => `${base}${path.replace(/^\/+/, "")}`;

const products = [
  {
    id: "set-black",
    name: "Black Satin-Look Cami & Shorts Set",
    price: 400,
    image: "/images/set-black.png",
    sizes: ["S", "M", "L"],
    defaultColor: "Black",
  },
  {
    id: "set-white",
    name: "White Satin-Look Cami & Shorts Set",
    price: 400,
    image: "/images/set-white.png",
    sizes: ["S", "M", "L"],
    defaultColor: "White",
  },
  {
    id: "nude-slip",
    name: "Nude Satin-Look Slip Dress",
    price: 400,
    image: "/images/nude-slipp-dress.png",
    sizes: ["S", "M", "L"],
    defaultColor: "Nude",
  },
  {
    id: "white-slip",
    name: "White Satin-Look Slip Dress",
    price: 499,
    image: "/images/white-slip-dress.png",
    sizes: ["S", "M", "L"],
    defaultColor: "White",
  },
  {
    id: "black-chemise",
    name: "Black Satin-Look Chemise Dress",
    price: 499,
    image: "/images/black-chemise.png",
    sizes: ["S", "M", "L"],
    defaultColor: "Black",
  },
];

const formatPrice = (n) => `${n} kr`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Amic — Underwear designed for real life</title>
    <meta
      name="description"
      content="Amic underwear designed for real life. Comfort, simplicity, and quiet confidence."
    />
  </head>

  <body>
    <header class="header">
      <div class="container header__inner">
        <strong class="brand">Amic</strong>
      </div>
    </header>

    <main>
      <!-- HERO -->
      <section class="hero">
        <div class="container hero__inner">
          <h1 class="hero__title">
            Amic underwear designed <span class="em">for real life</span>
          </h1>

          <p class="hero__subtitle">
            Thoughtfully made underwear for women who value comfort, simplicity,
            and quiet confidence.
          </p>

          <a href="#shop" class="btn">Shop collection</a>
        </div>
      </section>

      <!-- PRODUCTS -->
      <section id="shop" class="shop">
        <div class="container">
          <div class="grid">
            {products.map((p) => (
              <article class="card" key={p.id}>
                <img src={img(p.image)} alt={p.name} />
                <h3>{p.name}</h3>
                <p class="price">{formatPrice(p.price)}</p>
                <button>Add to cart</button>
              </article>
            ))}
          </div>
        </div>
      </section>
    </main>

    <footer class="footer">
      <p>© {new Date().getFullYear()} Amic. All rights reserved.</p>
    </footer>

    <style>
      :global(body) {
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        background: #fbfbfa;
        color: #0f0f10;
      }

      .container {
        width: min(1100px, 90%);
        margin: 0 auto;
      }

      .header {
        border-bottom: 1px solid #e5e5e5;
        padding: 16px 0;
      }

      .brand {
        font-size: 20px;
        font-weight: 700;
        letter-spacing: -0.02em;
      }

      .hero {
        padding: 80px 0 60px;
        text-align: center;
      }

      .hero__title {
        font-size: clamp(42px, 6vw, 72px);
        line-height: 1;
        letter-spacing: -0.04em;
        margin: 0;
      }

      .hero__title .em {
        background: linear-gradient(90deg, #000, #666);
        -webkit-background-clip: text;
        color: transparent;
      }

      .hero__subtitle {
        max-width: 600px;
        margin: 20px auto 30px;
        font-size: 16px;
        color: #555;
      }

      .btn {
        display: inline-block;
        padding: 14px 22px;
        border-radius: 999px;
        background: #0f0f10;
        color: white;
        text-decoration: none;
        font-weight: 600;
      }

      .shop {
        padding: 40px 0 80px;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 24px;
      }

      .card {
        background: white;
        border-radius: 20px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
      }

      .card img {
        width: 100%;
        height: auto;
        border-radius: 14px;
      }

      .price {
        font-weight: 700;
        margin: 8px 0;
      }

      .card button {
        margin-top: 10px;
        padding: 10px 16px;
        border-radius: 999px;
        border: none;
        background: #0f0f10;
        color: white;
        cursor: pointer;
      }

      .footer {
        border-top: 1px solid #e5e5e5;
        padding: 20px;
        text-align: center;
        font-size: 14px;
        color: #666;
      }
    </style>
  </body>
</html>

