      .wrap{ max-width: 1120px; margin: 0 auto; padding: 28px 18px 64px; }

      .hero{
        display:grid;
        grid-template-columns: 1.12fr 0.88fr;
        gap: 22px;
        padding: 26px 0 10px;
        align-items: center;
      }
